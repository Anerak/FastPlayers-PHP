    <body>
        <form id="form1">
            <div class="items">
            <input type="text" class="dia" name="dia[]" placeholder="Día"/>
            <input type="text" class="hora" name="hora[]" placeholder="Hora"/>
            </div>
            <br>
            <input type="button" class="agregar" value="Agregar"/><br><br>
            <input type="submit" value="Guardar"/>
        </form>
        <style type="text/css">
            .hora{
                display: block;
                clear: both;
            }
        </style>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
        <script>
            $(".agregar").on("click", function(){
                $(".items input").clone().insertAfter(".items");
                
            });
            
        </script>
        
    </body>
